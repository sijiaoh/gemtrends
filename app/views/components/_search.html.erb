<%= form_with url: chart_path, method: :get, class: "flex w-full" do |form| %>
  <%= form.text_field(
        :query,
        value: chart.query,
        placeholder: t(".placeholder"),
        autocomplete: "off",
        class: "flex-1 min-w-0 focus:ring-0 border-red-400 focus:border-red-400 rounded-l-lg"
      ) %>
  <%= form.select(
        :period,
        options_for_select(
          ChartPeriod::TYPES.map { |type| [t("period.#{type}"), type] },
          chart.period.type
        ),
        {},
        class: [
          "focus:ring-0 border border-l-0 border-red-400 focus:border-red-400",
          "pr-2 text-red-500 after:color-red-500 bg-none appearance-auto"
        ].join(" ")
      ) %>
  <%= form.submit t("search"), name: nil, class: "border border-l-0 border-red-400 rounded-r-lg px-4 text-red-500 cursor-pointer" %>
<% end %>
